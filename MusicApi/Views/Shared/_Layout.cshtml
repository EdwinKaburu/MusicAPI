        <script src="~/js/site.js?v=1" defer></script>
    </environment>
    <title>MusicApi</title>
</head>
<body>
    <div class="title-bar">
        <div class="title-bar-left">
            <button class="menu-icon" type="button" data-open="offCanvasLeft"></button>
            <span class="title-bar-title">Music-Api</span>
        </div>
        <div class="title-bar-right">
            <button class="menu-icon" type="button" data-open="offCanvasRight"></button>
        </div>
    </div>

    <div class="cell">
        <div class="off-canvas-wrapper">
            <div class="off-canvas position-left" id="offCanvasLeft" data-off-canvas>

                <div aside class="left-off-canvas-menu">

                    <div class="topnav" data-responsive-toggle="myTopnav" data-hide-for="medium">
                        <button class="menu-icon" type="button" data-toggle="example-menu"></button>
                        <div class="title-bar-title">Menu</div>
                    </div>

                    <div class="topnav" id="myTopnav">

                        <div class="top-bar-left">
                            <a asp-controller="Home" asp-action="Index">Home</a> <br />
                            <a asp-controller="Account" asp-action="Login">Log In/Register</a><br />
                            <a asp-controller="Create" asp-action="CreateArtist">Create</a><br />
                            <a asp-controller="Home" asp-action="UserPlaylistCreate">Create PortFolio</a><br />
                        </div>
                        <hr />
                        <div class="top-bar-right">
                            <a>All Rights Reserved  Music API</a>
                        </div>
                    </div>


                </div>

            </div>
            <div class="off-canvas position-right" id="offCanvasRight" data-off-canvas>
                <!-- Your menu or Off-canvas content goes here -->
            </div>
            <div class="off-canvas-content" data-off-canvas-content>
                @RenderBody()
            </div>
        </div>
    </div>
    <hr /><br />
    <footer>
        <p>Website developed by Edwin Kaburu, Patrick Mayer, and Kevin Stewart</p>
        <p>Use of any 3rd party content on this site is for demonstration purposes only.</p>
    </footer>
